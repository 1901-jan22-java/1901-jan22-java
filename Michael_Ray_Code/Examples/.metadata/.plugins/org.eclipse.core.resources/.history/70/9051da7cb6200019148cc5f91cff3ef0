package com.revature.app;

public class HW_6Even {
public static void main(String[] args) {
	System.out.println(CheckIfEven(1));
}

static boolean CheckIfEven(int num){
	boolean isEven = true;
	
	float numCheck = (float)num / 2;
	int intNumCheck = (int)numCheck;
	
	float finalCheck = numCheck - intNumCheck;
	
	System.out.println(finalCheck);
	
	if(finalCheck > 0){
		isEven = false;
	}
	
	return isEven;
}
}
