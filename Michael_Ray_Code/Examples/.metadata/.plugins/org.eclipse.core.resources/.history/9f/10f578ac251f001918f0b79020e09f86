package com.revature.classbasics;

public class ControlStatement {
public static void main(String[] args) {
	
	
	
	
}

public static String intToHex(int num)
{
	int divide = num;
	int mod = 0;
	String returnString = "";
	do{
		mod = divide % 16;
		divide /= 16;

			switch(mod)
			{
			case 10:
				returnString += "A";
			case 11:
				returnString += "B";
			case 12:
				returnString += "C";
			case 13:
				returnString += "D";
			case 14:
				returnString += "E";
			case 15:
				returnString += "F";
				default:
					returnString += mod;
			}

	}while(divide > 16);
	
	return returnString;
}
}
