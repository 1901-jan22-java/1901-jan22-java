package com.revature.app;

public class HomeWork1 {
public static void main(String[] args) {
	int nums[] = {1,0,5,6,3,2,3,7,9,9,4};
	
	System.out.println(nums.length);
	PrintArray(nums);
	nums = BubbleSort(nums, 0, nums.length);
	PrintArray(nums);
}

public static void PrintArray(int[] arr){
	for(int i : arr){
		System.out.print(i + ", ");
	}
	System.out.println("\n");
}
public static int[] BubbleSort(int[] arr, int start,int end){
	end -= 1;
	int halfNum = ((end - start )/2);
	if(halfNum <= 0)
	{
		halfNum += start;
		System.out.println("Start: " + start + " End: " + end + " Middle: " + halfNum);
		return arr;		
	}
	else
	{
		halfNum += start;
		System.out.println("Start: " + start + " End: " + end + " Middle: " + halfNum);
		arr = BubbleSort(arr, start, halfNum);
		arr = BubbleSort(arr, halfNum, end);
	}
	
	for(int i = 0; (start + i) < halfNum; i++)
	{
		int newStart = start + i;
		int newHalfNum = halfNum + i;
		
		System.out.println("Swapping [" + newStart + "] and [" + newHalfNum + "]");
		
		if(arr[newStart] > arr[newHalfNum]){
			int store = arr[newStart];
			arr[newStart] = arr[newHalfNum];
			arr[newHalfNum] = store;
		}		
	}
	
	return arr;
	
}
}
