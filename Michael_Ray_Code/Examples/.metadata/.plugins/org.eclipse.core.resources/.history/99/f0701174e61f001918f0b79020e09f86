package com.revature.app;

public class HomeWork1 {
public static void main(String[] args) {
	int nums[] = {1,0,5,6,3,2,3,7,9,9,4};
	
	PrintArray(nums);
	BubbleSort(nums, 0, nums.length);
	PrintArray(nums);
}

public static void PrintArray(int[] arr){
	for(int i : arr){
		System.out.print(i + ", ");
	}
}
public static void BubbleSort(int[] arr, int start,int end){
	int halfNum = ((end - start )/2);
	
	if(halfNum <= 1)
	{
		return;		
	}
	else
	{
		halfNum += start;
		BubbleSort(arr, start, halfNum);
		BubbleSort(arr, halfNum, end);
	}
	
	for(int i = start; i < end; i++)
	{
		if(arr[i] > arr[end-i]){
			int store = arr[i];
			arr[i] = arr[end-i];
			arr[end-i] = store;
		}		
	}
	
	
	
}
}
